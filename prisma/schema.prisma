generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id   Int @id @default(autoincrement())
    name String
    email String @unique
    password String
    role String @default("user")
    profileImage String?
    refreshToken String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    
}

